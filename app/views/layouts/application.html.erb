<!DOCTYPE html>
<html>
<head>
  <title>GraffHound</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Syncopate' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Gruppo' rel='stylesheet' type='text/css'>

</head>
<body>
  <div class="container"> <!--class="container"-->
    <header>
      <div class="alpha five columns">
      <h1><strong><%= link_to "GraffHound", "/", :class => "graff-head" %></strong></h1>
    </div>
    <div class="five columns omega">
      <nav class="nav-head">
        <ul>
          <% if current_user %>
          <li><%= link_to "logout", "/logout" %></li>
          <li><%= link_to "my page", "/users/#{current_user.id}" %></li>

          <% else %>
          <li><%= link_to "log in", "/login" %></li>
          <% end %>
          <li><%= link_to "Artists", "/artists"  %></li>
          <li><%= link_to "Pieces", "/pieces"  %></li>
          <li><%= link_to "Locations", "/location"  %></li>
        </ul>
      </nav>
    </div>
    </header>
    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash_#{name}" %>
    <% end %>
    <%= yield %>
    <footer>
      <%= yield :scripts %>
    </footer>
  </div>
</body>


</html>
